<config>
	<modules>
		<BlueAcorn_AjaxCart>
			<version>1.0.0</version>
		</BlueAcorn_AjaxCart>
	</modules>
	
	<global>
		<helpers>
			<blueacorn_ajaxcart>
				<class>BlueAcorn_AjaxCart_Helper</class>
			</blueacorn_ajaxcart>
		</helpers>
	</global>
	
	<frontend>
		<translate>
			<modules>
				<BlueAcorn_AjaxCart>
					<files>
						<default>BlueAcorn_AjaxCart.csv</default>
					</files>
				</BlueAcorn_AjaxCart>
			</modules>
		</translate>
		
		<layout>
			<updates>
				<blueacorn_ajaxcart>
					<file>blueacorn/ajaxcart.xml</file>
				</blueacorn_ajaxcart>
			</updates>
		</layout>
		
		<routers>
			<checkout>
				<args>
					<modules>
						<BlueAcorn_AjaxCart before="Mage_Checkout">BlueAcorn_AjaxCart_Checkout</BlueAcorn_AjaxCart>
					</modules>
				</args>
			</checkout>
		</routers>
	</frontend>
	
	<default>
		<blueacorn_ajaxcart>
			<general>
				<enabled>1</enabled>
			</general>
		</blueacorn_ajaxcart>
	</default>
</config>