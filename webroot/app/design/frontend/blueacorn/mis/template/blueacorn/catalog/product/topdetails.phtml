/**
 * Product view top details template
 */

?>
<?php $_helper = $this->helper('catalog/output'); ?>
<?php $_product = $this->getProduct(); ?>
<?php
$categoryurl = "";
$category = Mage::getModel('catalog/category')->loadByAttribute('name',$_product->getAttributeText('manufacturer'));
if (is_object($category))
{
    $categoryurl = $category->getUrl();
}
?>
<div class="top-product-details">
    <div class="product-name">
        <h1><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></h1>
    </div>
    <div class="details">
        <?php if($_product->getAttributeText('manufacturer')): ?>
            <span class="manufacturer"><?php echo $this->__("Manufacturer: ") ?>
            <?php if(!empty($categoryurl)): ?><a href="<?php echo $categoryurl ?>"><?php echo $_product->getAttributeText('manufacturer'); ?></a>
            <?php else : ?><?php echo $_product->getAttributeText('manufacturer'); ?> <span class="spacer">/</span></span>
            <?php endif ?><span class="spacer">/</span></span>
        <?php endif ?>

        <?php if($_product->getMpn()): ?>
            <span class="mpn-number"><?php echo $this->__("MPN : ") ?><?php echo $_product->getMpn(); ?> <span class="spacer">/</span></span>
        <?php endif ?>

        <?php if($_product->getSku()): ?>
            <span class="item-number"><?php echo $this->__("Item #: ") ?><?php echo $_product->getSku(); ?> <span class="spacer">/</span></span>
        <?php endif ?>
    </div>
    <div class="grid-full">
        <div class="y-summary"><?php $this->helper('yotpo')->showBottomline($this, $_product); ?></div>
        <div class="y-summary"><?php $this->helper('yotpo')->showQABottomline($this, $_product); ?></div>
    </div>
</div>

