/**
 * Product view top details template
 */

?>
<?php $_helper = $this->helper('catalog/output'); ?>
<?php $_product = $this->getProduct(); ?>

<div class="top-product-details">
    <div class="product-name">
        <span class="h1"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></span>
    </div>

    <div class="details">
        <?php if($_product->getAttributeText('manufacturer')): ?>
            <span class="manufacturer"><?php echo $this->__("Manufacturer: ") ?><?php echo $_product->getAttributeText('manufacturer') ?> /</span>
        <?php endif ?>

        <?php if($_product->getMpnNumber()): ?>
            <span class="mpn-number"><?php echo $this->__("MPN : ") ?><?php echo $_helper->productAttribute($_product, $_product->getMpnNumber(), 'mpn_number') ?> /</span>
        <?php endif ?>

        <?php if($_product->getItemNumber()): ?>
            <span class="item-number"><?php echo $this->__("item #: ") ?><?php echo $_helper->productAttribute($_product, $_product->getItemNumber(), 'item_number') ?> </span>
        <?php endif ?>
    </div>

    <?php echo $this->getReviewsSummaryHtml($_product, 'default', false)?>

</div>

