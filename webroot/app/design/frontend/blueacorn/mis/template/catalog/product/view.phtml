            <?php if($_product->isConfigurable()): ?>
                // sets the url for a configurable. Passing the simple product's id
                baseUrl = "<?php echo Mage::getUrl('map/email')?>" + "requestToken?product_id=" + spConfig.getIdOfSelectedProduct();
